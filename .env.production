# Configuración de la aplicación
# Verifica los datos que debes modificar antes de pasar a producción
APP_NAME="Talleres de Verano MDEP"
APP_ENV=production
APP_URL=https://muniporvenir.gob.pe/talleresdeverano
APP_DEBUG=false
APP_VERSION=1.0.0
APP_KEY=base64:YOUR-SECURE-KEY-HERE
APP_TIMEZONE=America/Lima

# Base de datos
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=sistema_talleres
DB_USERNAME=talleresuser
DB_PASSWORD=strong-password-here

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=sistemas@muniporvenir.gob.pe
MAIL_PASSWORD=your-app-specific-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=sistemas@muniporvenir.gob.pe
MAIL_FROM_NAME="${APP_NAME}"

# WhatsApp API
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_API_KEY=your-api-key
WHATSAPP_BUSINESS_ID=your-business-id
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Yape API
YAPE_API_URL=https://api.yape.com/v1
YAPE_API_KEY=your-api-key
YAPE_MERCHANT_ID=your-merchant-id

# Google Drive
GOOGLE_DRIVE_CLIENT_ID=your-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-client-secret
GOOGLE_DRIVE_REFRESH_TOKEN=your-refresh-token
GOOGLE_DRIVE_FOLDER_ID=your-folder-id

# Security
SESSION_DRIVER=file
SESSION_LIFETIME=120
SECURE_COOKIES=true

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=talleresdeverano

# Storage
STORAGE_PATH=/var/www/html/talleresdeverano/storage
BACKUP_PATH=/var/www/html/talleresdeverano/storage/backups

# Logs
LOG_CHANNEL=stack
LOG_LEVEL=error
LOG_MAX_FILES=30

# Contact
CONTACT_PHONE=123456789
CONTACT_EMAIL=contacto@muniporvenir.gob.pe

# Monitoring
MONITORING_ENABLED=true
MONITORING_EMAIL=sistemas@muniporvenir.gob.pe